    "scripts": {
        "build": "npm run clean && rollup -c && npm run copy-theme-sheet && npm run post-build",
        "clean": "shx rm -rf dist && shx rm -rf build_artifacts",
        "post-build": "npm run copy-theme-sheet && npm run copy-package && npm run copy-readme && npm run pack",
        "copy-theme-sheet": "node-sass src/Resources/Styles/BaseThemeVars.scss dist/themes.css",
        "copy-package": "shx cp package.json dist",
        "copy-readme": "shx cp README.md dist/",
        "pack": "shx mkdir ./build_artifacts && cd dist && npm pack && shx mv *.tgz ../build_artifacts",
        "generateCerts": "mkdirp certificates && cd certificates && mkcert create-ca && mkcert create-cert",
        "storybook": "npm run generateCerts && start-storybook -p 443 -s ./public --https --ssl-ca certificates/ca.crt --ssl-cert certificates/cert.crt --ssl-key certificates/cert.key",
        "storybookNoSSL": "start-storybook -p 3001 -s ./public",
        "storybook:export": "build-storybook -s ./public",
        "test": "jest",
        "test:watch": "jest --watch",
        "prettier:fix": "prettier --write src/**/*.{js,ts,tsx,scss}",
        "prettier:check": "prettier --check src/**/*.{js,ts,tsx,scss}",
        "eslint:fix": "eslint --cache --fix",
        "eslint:check": "eslint src/**/*.{js,ts,tsx}",
        "stylelint:fix": "stylelint --fix \"src/**/*.scss\"",
        "stylelint:check": "stylelint \"src/**/*.scss\"",
        "lint": "npm run prettier:fix && npm run stylelint:fix",
        "lint:check": "npm run eslint:check && npm run prettier:check && npm run stylelint:check",
        "generate": "node ./tools/generate-card-template.js",
        "chromatic": "chromatic --project-token CHROMATIC_PROJECT_TOKEN --exit-zero-on-changes"
    },
