{
    "extends": [
        "stylelint-config-sass-guidelines",
        "stylelint-config-prettier"
    ],
    "rules": {
        "indentation": 4,
        "color-named": "never",
        "selector-class-pattern": [
            "(?<=cb-)([a-z][a-z0-9]*)(-[a-z0-9]+)*$",
            {
                "message": "Class selectors must start with cb- and follow kebab-case convention, for example: cb-my-class"
            }
        ],
        "max-nesting-depth": [2, { "ignore": ["pseudo-classes"] }]
    }
}
